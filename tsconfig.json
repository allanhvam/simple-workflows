{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "removeComments": false,
        "types": [
            "node"
        ],
        "noImplicitAny": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "pretty": true,
        "esModuleInterop": true,
        // "experimentalDecorators": true,
        "stripInternal": true,
        // "target": "es5",
        // "module": "commonjs",
        // "sourceMap": true,
        "outDir": "lib",
        // "rootDir": "src/",
        // "lib": [
        //     "dom",
        //     "es2016" // was es5
        // ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "bin"
    ]
}